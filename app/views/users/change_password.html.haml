.page-header
  %h1=t '.change_password'
= simple_form_for @user, url: update_password_user_path(@user), method: :post, :html => { :class => 'form-horizontal' } do |f|
  = f.input :password
  = f.input :password_confirmation
  .form-actions
    = f.button :submit, t('helpers.submit.update', model: User.human_attribute_name(:password)), :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'

