.page-header
  %h1=t '.title', :default => User.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= User.human_attribute_name(:full_name)
      %th= User.human_attribute_name(:email)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @users.each do |user|
      %tr[user]
        %td= link_to user.full_name, user_path(user)
        %td= user.email
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(user), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(user), :method => :delete, :data => { :confirm => t('helpers.confirm.delete', model: user.full_name) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_user_path, :class => 'btn btn-primary'
